#!/bin/bash

# Reset
export COLOR_OFF='\e[0m'              # Text Reset

# Colors
export COLOR_BLACK='\e[0;30m'
export COLOR_GRAY='\e[1;30m'
export COLOR_RED='\e[0;31m'
export COLOR_LIGHT_RED='\e[1;31m'
export COLOR_GREEN='\e[0;32m'
export COLOR_LIGHT_GREEN='\e[1;32m'
export COLOR_BROWN='\e[0;33m'
export COLOR_YELLOW='\e[1;33m'
export COLOR_BLUE='\e[0;34m'
export COLOR_LIGHT_BLUE='\e[1;34m'
export COLOR_PURPLE='\e[0;35m'
export COLOR_LIGHT_PURPLE='\e[1;35m'
export COLOR_CYAN='\e[0;36m'
export COLOR_LIGHT_CYAN='\e[1;36m'
export COLOR_LIGHT_GRAY='\e[0;37m'
export COLOR_WHITE='\e[1;37m'

echo_color() {
    echo -e "$1""${@:2}" "${COLOR_OFF}"
}

echo_black() {
    echo_color $COLOR_BLACK "$@"
}
echo_gray() {
    echo_color $COLOR_GRAY "$@"
}
echo_red() {
    echo_color $COLOR_RED "$@"
}
echo_light_red() {
    echo_color $COLOR_LIGHT_RED "$@"
}
echo_green() {
    echo_color $COLOR_GREEN "$@"
}
echo_light_green() {
    echo_color $COLOR_LIGHT_GREEN "$@"
}
echo_brown() {
    echo_color $COLOR_BROWN "$@"
}
echo_yellow() {
    echo_color $COLOR_YELLOW "$@"
}
echo_blue() {
    echo_color $COLOR_BLUE "$@"
}
echo_light_blue() {
    echo_color $COLOR_LIGHT_BLUE "$@"
}
echo_purple() {
    echo_color $COLOR_PURPLE "$@"
}
echo_light_purple() {
    echo_color $COLOR_LIGHT_PURPLE "$@"
}
echo_cyan() {
    echo_color $COLOR_CYAN "$@"
}
echo_light_cyan() {
    echo_color $COLOR_LIGHT_CYAN "$@"
}
echo_light_gray() {
    echo_color $COLOR_LIGHT_GRAY "$@"
}
echo_white() {
    echo_color $COLOR_WHITE "$@"
}

export -f echo_black
export -f echo_gray
export -f echo_red
export -f echo_light_red
export -f echo_green
export -f echo_light_green
export -f echo_brown
export -f echo_yellow
export -f echo_blue
export -f echo_light_blue
export -f echo_purple
export -f echo_light_purple
export -f echo_cyan
export -f echo_light_cyan
export -f echo_light_gray
export -f echo_white
