{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{if .Root}}ADMIN: {{end}}{{.Folder}} ({{.Shell}})",
  "final_space": true,
  "version": 1,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": []
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "leading_diamond": "\uE0B6",
          "trailing_diamond": "",
          "foreground": "#EEEEEE",
          "background": "#546E7A",
          "background_templates": [
            "{{ if eq .OS \"windows\" }}#025da3{{ end }}",
            "{{ if eq .OS \"ubuntu\" }}#DD4814{{ end }}",
            "{{ if eq .OS \"raspbian\" }}#C31C4A{{ end }}",
            "{{ if eq .OS \"linux\" }}#da1717{{ end }}"
          ],
          "properties": {
            "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}}  "
          }
        },
        {
          "type": "shell",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#008a2e",
          "background_templates": [
            "{{ if eq .Shell \"pwsh\" }}#477CDA{{ end }}",
            "{{ if eq .Shell \"bash\" }}#293036{{ end }}"
          ],
          "properties": {
            "template": " {{ .Name }} "
          }
        },
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#EEEEEE",
          "background": "#546E7A",
          "properties": {
            "template": " {{ if .SSHSession }}\uf817 {{ end }}{{ .UserName }} "
          }
        },
        {
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#111111",
          "background": "#ffff66",
          "properties": {
            "template": " \uf0e7 "
          }
        },
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "<transparent, #48d3d8>\uE0B0</>",
          "trailing_diamond": "\uE0B0",
          "foreground": "#000000",
          "background": "#48d3d8",
          "properties": {
            "style": "full",
            "folder_icon": "\uF115",
            "template": " {{ .Path }} "
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\uE0b0",
          "foreground": "#193549",
          "background": "#3dff6e",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#f3ff48{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#fa5e3b{{ end }}",
            "{{ if gt .Ahead 0 }}#f17c37{{ end }}",
            "{{ if gt .Behind 0 }}#89d1dc{{ end }}"
          ],
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_worktree_count" : true,
            "fetch_upstream_icon": true,
            "template": " {{ .HEAD }} {{ .BranchStatus }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0}}\uf692 {{ .StashCount }}{{ end }}{{ if gt .WorktreeCount 0}} \uf1bb {{ .WorktreeCount }}{{ end }} "
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "exit",
          "style": "powerline",
          "powerline_symbol": "\uE0B2",
          "invert_powerline": true,
          "foreground": "#ffffff",
          "background": "#6CA35E",
          "background_templates": [
            "{{ if gt .Code 0 }}red{{ end }}"
          ],
          "properties": {
            "always_enabled": true,
            "template": " {{ if gt .Code 0 }}\u2717  {{ .Code }}{{ else }}\u2713{{ end }} "
          }
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\uE0B2",
          "invert_powerline": true,
          "foreground": "#ffffff",
          "background": "#8800dd",
          "properties": {
            "always_enabled": true,
            "threshold": 500,
            "style": "austin",
            "template": " {{ .FormattedMs }} "
          }
        },
        {
          "type": "time",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "\uE0B4",
          "invert_powerline": true,
          "background": "#33658A",
          "foreground": "#ffffff",
          "properties": {
            "template": " {{ .CurrentDate | date .Format }} ",
            "time_format": "15:04:05"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "white",
          "properties": {
            "template": "\uf101"
          }
        }
      ]
    }
  ]
}
